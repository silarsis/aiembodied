{
  "name": "@aiembodied/main",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "node --loader ts-node/esm src/main.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "npm run test:rebuild && vitest run",
    "test:coverage": "npm run test:rebuild && vitest run --coverage",
    "test:rebuild": "cross-env PREBUILD_INSTALL_FORBID=1 npm_config_runtime=node npm_config_target=22.17.1 pnpm rebuild better-sqlite3"
  },
  "dependencies": {
    "@picovoice/porcupine-node": "^3.0.6",
    "@picovoice/pvrecorder-node": "^1.2.8",
    "auto-launch": "^5.0.6",
    "better-sqlite3": "^12.4.1",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "electron": "^38.3.0",
    "keytar": "^7.9.0",
    "openai": "^6.5.0",
    "prom-client": "^15.1.3",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.5",
    "@types/better-sqlite3": "^7.6.13",
    "@types/debug": "^4.1.12",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2"
  }
}
